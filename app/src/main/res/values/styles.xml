<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">

        <item name="android:height">60dp</item>
        <item name="android:layout_width">206dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:background">#FFF08C35</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="AppButton2" parent="AppButton">
        <item name="android:background">#FFCD0E3E</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
