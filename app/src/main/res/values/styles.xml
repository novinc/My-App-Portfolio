<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">

        <item name="android:height">60dp</item>
        <item name="android:layout_width">206dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppButton2" parent="AppButton">
        <item name="android:background">@drawable/button2_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
